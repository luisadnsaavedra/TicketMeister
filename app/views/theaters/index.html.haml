%h1=t('.theater_list')

%table
  %thead
    %tr
      %th Title
      %th Description
      %th
      %th
      %th

  %tbody
    - @theaters.each do |theater|
      %tr
        %td= theater.title
        %td= theater.description
        %td= link_to 'Show', theater
        %td= link_to 'Edit', edit_theater_path(theater)
        %td= link_to 'Destroy', theater, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to t('.add_theater'), new_theater_path
